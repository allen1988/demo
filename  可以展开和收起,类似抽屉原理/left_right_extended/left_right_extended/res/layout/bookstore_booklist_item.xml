<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bookListItemLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listitembg"
     >
<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="8dip"
    android:paddingTop="8dip"
    android:paddingLeft="5dip"
    android:paddingRight="5dip"
     >
    <ImageView
        android:id="@+id/bookstore_booklist_item_cover"
        android:layout_width="48dip"
        android:layout_height="60dip"
        android:background="@drawable/ic_launcher"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/bookstore_booklist_item_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@+id/bookstore_booklist_item_cover"
        android:text="TextView01"
        android:textColor="#000000"
        android:textSize="17dip" />

     
    <TextView
        android:id="@+id/bookstore_booklist_item_author"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookstore_booklist_item_name"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@+id/bookstore_booklist_item_cover"
        android:text="TextView01"
        android:textColor="#666666"
        android:textSize="14dip" /> 

    <TextView
        android:id="@+id/bookstore_booklist_item_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dip"
        android:text="1"
        android:textColor="#000000"
        android:visibility="gone" />

    <TextView
        android:id="@+id/bookstore_booklist_item_chapter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookstore_booklist_item_author"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_toRightOf="@+id/bookstore_booklist_item_cover"
        android:text="TextView01"
        android:textColor="#666666"
        android:layout_marginTop="2dip"
        android:textSize="10dip" />

    <TextView
        android:id="@+id/bookstore_booklist_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        android:layout_marginTop="2dip"
        android:text="TextView01"
        android:textColor="#ff6701"
        android:textSize="12dip" />
  <TextView
        android:id="@+id/bookstore_booklist_item_wordcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        android:layout_marginTop="2dip"
        android:layout_below="@+id/bookstore_booklist_item_time"
        android:textColor="#000000"
        android:textSize="12dip" />
    <TextView
        android:id="@+id/bookstore_booklist_item_extra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/bookstore_booklist_item_time"
        android:layout_marginRight="10dip"
        android:text="TextView01"
        android:textColor="#666666"
        android:textSize="10dip"
        android:visibility="gone" />

</RelativeLayout>

</RelativeLayout>