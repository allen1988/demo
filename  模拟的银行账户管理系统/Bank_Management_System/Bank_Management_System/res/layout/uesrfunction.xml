<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:background="@drawable/bg"
     >
    <RelativeLayout 
        android:id="@+id/gTopliner" 
        android:layout_width="fill_parent" 
        android:layout_height="50dip"
        android:background="@drawable/topbg"
        >
    <Button
        android:layout_width="64dip"
        android:layout_height="30dip"
        android:id="@+id/btn_back" 
        android:layout_marginLeft="2dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/returnbutton1_style"
        android:text="@string/financehelper"
        android:textSize="10sp"
        />
    <TextView 
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="45dip"
        android:layout_marginTop="10dip"
        android:layout_toRightOf="@id/btn_back"
        android:layout_marginLeft="65dip"
        android:text="@string/userfunctuon"
        android:textSize="20sp"
        
        />
    
    </RelativeLayout>
    <GridView 
        android:gravity="center"
         android:id="@+id/gGridView" 
         android:scrollbars="vertical" 
         android:layout_width="fill_parent" 
         android:layout_height="fill_parent" 
         android:horizontalSpacing="5.0dip" 
         android:verticalSpacing="10.0dip" 
         android:stretchMode="columnWidth" 
         android:columnWidth="70.0dip" 
         android:numColumns="auto_fit" />
</LinearLayout>